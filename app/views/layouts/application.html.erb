<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- ヘッダー -->
    <header id="header">
      <% if customer_signed_in? %>
        <%= link_to 'ログアウト', customers_sign_out_path, method: :delete %>
      <% end %>
    </header>

    <div class="container">
      <%= yield %>
    </div>

    <!-- フッター -->
    <footer id="footer">
    </footer>
  </body>
</html>
