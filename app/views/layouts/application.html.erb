<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/9ddd9b0d94.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <!-- ヘッダー -->
      <header class="navbar navbar-fixed-top">

          <nav class="navbar-brand">
            <span>NAGANO CAKE</span>
          </nav>
          <nav>
            <ul class="nav navbar  navbar-light">
              <!--if文でサインインとアウト時の表示を変更-->
              <% if customer_signed_in? %>
              <li class="pr-5">
                <span>ようこそ、<%= current_customer.last_name %>さん!</span>
              </li>
              <li class="nav-item">
                <%= link_to ' マイページ ', customers_path, class: 'btn btn-light' %>
              </li>
              <li class="nav-item pl-4">
                <%= link_to ' 商品一覧 ', products_path, class: 'btn btn-light' %>
              </li>
              <li class="nav-item pl-4">
                <%= link_to ' カート ', cart_products_path, class: 'btn btn-light' %>
              </li>
              <li class="nav-item pl-4">
                <%= button_to ' ログアウト ', customers_sign_out_path , class: 'btn btn-light', method: :delete %>
              </li>
              <% else %>

              <li class="nav-item">
                <%= link_to ' 商品一覧 ', products_path, class: 'btn btn-light' %>
              </li>
              <li class="nav-item pl-4">
                <%= link_to ' ログイン ', customers_sign_in_path, class: 'btn btn-light' %>
              </li>
              <li class="nav-item pl-4">
                <%= link_to ' 新規登録 ', customers_sign_up_path, class: 'btn btn-light' %>
              </li>
              <% end %>
            </ul>
              <%= form_with url: search_index_path, scope: :search, method: :get, local: true do |f| %>
                <div class="input-group">
                  <%= f.text_field :content, placeholder: 'キーワード検索', class: "form-control" %>
                  <span class="input-group-btn">
                    <%= f.submit '検索', class: "fas fa-search pr-1" %>

                  </span>
                </div>
              <% end %>
        </nav>

      </div>
    </header>
    <span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
    <i class="fab fa-facebook-square"></i>

    <div class="container-fluid">
      <div class="container">
        <%= yield %>
      </div>
    </div>
    <!-- フッター -->
    <footer id="footer">
    </footer>
  </body>
</html>
