<div class="row">
  <div class="col-sm">
    <h5><span>ショッピングカート</span></h5>
  </div>
  <div class="col-sm-right pr-3 pt-5">
    <%= link_to 'カートを空にする', destroy_all_cart_products_path, method: :delete, class: "btn btn-danger btn-sm" %>
  </div>
</div>

<div class="row mt-3">
  <!-- カートテーブル -->
  <table class="table table-bordered">
    <thead>
      <tr class="table-info">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_products.each do |cart| %>
      <tr>
        <td class="table-light align-middle">
          <%= attachment_image_tag cart.product, :image, :fill, 50, 50, format: 'jpeg'%>
          <%= cart.product&.name %>
        </td>
        <td class="table-light align-middle">
          <% tax_price = cart.product.non_taxed_price * 1.1 %>
          <%= tax_price.floor.to_s(:delimited) %>
        </td>
        <td class="table-light align-middle">
          <%= form_with model: cart, url: cart_product_path(cart.product.id), method: :patch, local: true do |f| %>
            <%= f.number_field :quantity, min:1, step: 1, style: "width: 60px;", class: "form-control float-left" %>
            <%= f.submit '変更', class: "btn btn-primary btn-sm float-left mt-1" %>
          <% end %>
        </td class="table-light align-middle">
        <% subtotal = tax_price * cart.quantity %>
        <td class="table-light align-middle"><%= subtotal.floor.to_s(:delimited) %></td>
        <td class="table-light text-center"><%= link_to '削除する', cart_product_path(cart.product.id), method: :delete, class: "btn btn-danger btn-sm" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-sm">
    <%= link_to '買い物を続ける', root_path, class: "btn btn-info btn-sm" %>
  </div>

  <!-- 合計金額テーブル -->
  <div class="col-sm-3 float-right">
    <table class="table table-bordered ">
      <tbody>
        <tr>
          <th class="table-info">合計金額</th>
          <td class="table-light"><%= @total_price.floor.to_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-sm">
    <% if @cart_products.present? %>
      <div class="row" style="text-align: center;">
          <div class="col-md-4 offset-md-4">
            <%= link_to '情報入力に進む', new_order_path, class: "btn btn-success" %>
          </div>
      </div>
    <% end %>
  </div>
</div>