<div class="row">
  <h4>ショッピングカート</h4>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_products.each do |cart| %>
      <tr>
        <td><%= cart.product&.name %></td>
        <% tax_price = cart.product.non_taxed_price * 1.1 %>
        <td><%= tax_price.floor %></td>
        <td><%= cart.quantity %></td>
        <td></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>