<div class="row">
  <div class="col">
    <h2>配送先登録 / 一覧</h2>

    <!-- 配送先新規登録 -->
    <div class="form-group">
      <%= form_for @ship_new do |f| %>

        <div class="field row">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-2 col-form-label" %>
          <%= f.text_field :postal_code, class: "ship_postal_code col-sm-10", size: 20  %>
        </div>

        <div class="field row">
          <%= f.label :住所, class: "col-sm-2 col-form-label" %>
          <%= f.text_field :address, class: "ship_address col-sm-10", size: 40 %>
        </div>

        <div class="field row">
          <%= f.label :宛名, class: "col-sm-2 col-form-label" %>
          <%= f.text_field :name, class: "ship_name col-sm-7", size: 20  %>
        </div>

        <div class="actions row">
          <%= f.submit value: "登録する", class: "btn btn-success col-sm-3" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

<!-- 配送先一覧 -->
<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @ships.each do |ship| %>
        <tr>
          <td><%= ship.postal_code %></td>
          <td><%= ship.address %></td>
          <td><%= ship.name %></td>
          <td>
            <%= link_to "編集する", edit_ship, class: "btn btn-primary" %>
            <%= link_to "削除する", edit_ship, class: "btn btn-danger", method: :delete %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>