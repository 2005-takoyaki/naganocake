<div class="row">
  <div class="col">
    <h2>配送先登録 / 一覧</h2>

    <!-- 配送先新規登録 -->
    <div class="form-group">
      <%= form_for @ship_new do |f| %>

        <div class="field row">
          <span class="col-sm-2 col-form-label">郵便番号(ハイフンなし)</span>
          <%= f.text_field :postal_code, class: "ship_postal_code" %>
        </div>

        <div class="field row">
          <span class="col-sm-2 col-form-label">住所</span>
          <%= f.text_area :address, class: "ship_address", size: 30 %>
        </div>

        <div class="field row">
          <span class="col-sm-2 col-form-label">宛名</span>
          <%= f.text_field :name, class: "ship_address" %>
        </div>

        <div class="actions row">
          <%= f.submit class: "btn btn-primary col-xs-12" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

<form>
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Eメール</label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="email@example.com">
    </div>
  </div>
  <div class="form-group row">
    <label for="Password" class="col-sm-2 col-form-label">パスワード</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="Password" placeholder="パスワード">
    </div>
  </div>
</form>