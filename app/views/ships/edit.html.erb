<div class="row">
  <div class="col">
    <h2>配送先編集</h2>

    <!-- 配送先編集 -->
    <div class="form-group">
      <%= form_for @ship do |f| %>

        <div class="field row">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-3 col-form-label" %>
          <%= f.text_field :postal_code, class: "form ship_postal_code", size: 20  %>
        </div>

        <div class="field row">
          <%= f.label :住所, class: "col-3 col-form-label" %>
          <%= f.text_field :address, class: "form ship_address", size: 40 %>
        </div>

        <div class="field row">
          <%= f.label :宛名, class: "col-3 col-form-label" %>
          <%= f.text_field :name, class: "form ship_name", size: 20  %>
        </div>

        <div class="actions">
          <%= f.submit value: "編集する", class: "btn btn-primary float-right" %>
        </div>

      <% end %>
    </div>
  </div>
</div>