<div class="row my-4">
  <div class="col-sm pl-5">
    <h5><span>注文履歴詳細</span></h5>
  </div>
</div>

<div class="row">
	<!-- 注文情報テーブル -->
	<div class="col-sm-6">
 		<p class="font-weight-bold">注文情報</p>
		<table class="table table-bordered">
			<tbody>
				<tr>
					<th class="table-info">注文日</th>
					<td class="table-light"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
				</tr>
				<tr>
					<th class="table-info">支払い方法</th>
					<td class="table-light"><%= @order.payment_method %></td>
				</tr>
				<tr>
					<th class="table-info">ステータス</th>
					<td class="table-light"><%= @order.order_status %></td>
				</tr>
			</tbody>
		</table>
	</div>

	<!-- 請求情報テーブル -->
	<div class="col-sm-4">
	 	<p class="font-weight-bold">請求情報</p>
		<table class="table table-bordered">
			<tbody>
				<tr>
					<th class="table-info">商品合計</th>
					<td class="table-light"><%= (@order.billing_total - @order.fare).floor.to_s(:delimited) %></td>
				</tr>
					<th class="table-info">送料</th>
					<td class="table-light"><%= @order.fare.floor.to_s(:delimited) %></td>
				</tr>
				<tr>
					<th class="table-info">請求金額</th>
					<td class="table-light"><%= @order.billing_total.floor.to_s(:delimited) %></td>
				</tr>
			</tbody>
		</table>
	</div>
</div>

<!-- 注文内容テーブル -->
<div class="row">
	<div class="col-sm-7">
		<p class="font-weight-bold">注文内容</p>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th class="table-info">商品名</th>
					<th class="table-info">単価(税込)</th>
					<th class="table-info">個数</th>
					<th class="table-info">小計</th>
				</tr>
			</thead>
			<tbody>
				<% @order_products.each do |order_product| %>
					<tr>
						<td class="table-light"><%= order_product.product.name %></td>
						<td class="table-light"><%= order_product.taxed_price.floor.to_s(:delimited) %></td>
						<td class="table-light"><%= order_product.number.floor.to_s(:delimited) %></td>
						<td class="table-light"><%= (order_product.taxed_price * order_product.number).floor.to_s(:delimited) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

