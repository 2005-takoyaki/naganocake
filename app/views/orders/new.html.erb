<div class="row my-4">
  <div class="col pl-5">
    <h5><span class="bg-info text-light">注文情報入力</span></h5>
  </div>
</div>

<%= form_for(@order) do |f| %>
	<div>
		<h3>支払い情報入力</h3>
	</div>
	<div class="radio-inline">
    <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
    <%= f.label :クレジットカード, class: "job_type_label" %>
	</div>
	<div class="radio-inline">
		<%= f.radio_button :payment_method, :銀行振り込み %>
	    <%= f.label :銀行振り込み, class: "job_type_label" %>
	</div>

  	<div>
		<h3>お届け先</h3>
	</div>
	<div class="radio-inline">
	    <%= f.radio_button :address, :ご自身の住所, checked: "checked" %>
	    <%= f.label :ご自身の住所, class: "job_type_label" %> <br/>
			<%= @customer.postal_code + @customer.address %> <br/>
			<%= @customer.last_name + @customer.first_name %>
	</div>

	<div class="radio-inline">
	    <%= f.radio_button :address, :登録住所から選択, checked: "checked" %>
	    <%= f.label :登録住所から選択, class: "job_type_label" %>
	    <%= f.collection_select :address, Ship.where(customer_id: current_customer.id), :id, :name %>
	</div>

	<div class="radio-inline">
	    <%= f.radio_button :address, :新しいお届け先, checked: "checked" %>
	    <%= f.label :新しいお届け先, class: "job_type_label" %>

	    <div class="field row">
          <%= f.label :"郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code, class: "form ship_postal_code", size: 20  %>
        </div>

        <div class="field row">
          <%= f.label :住所 %>
          <%= f.text_field :address, class: "form ship_address", size: 40 %>
        </div>
 
        <div class="field row">
          <%= f.label :宛名 %>
          <%= f.text_field :address_name, class: "form ship_name", size: 20  %>
        </div>
	</div>

	<%= f.submit value: "確認画面に進む", class: "btn btn-primary" %>

<% end %>
