<div class="row">
  <div class="col-sm pl-5">
    <h5><span class="bg-light">注文履歴一覧</span></h5>
  </div>
</div>

<div class="row">
	<div class="col-sm">
		<table class="table table-bordered">
			<thead class="thead-light">
				<th>注文日</th>
				<th>配送先</th>
				<th>注文商品</th>
				<th>支払い金額</th>
				<th>ステータス</th>
				<th>注文詳細</th>
			</thead>
			<tbody>
				<% @orders.each do |order| %>
					<tr>
						<td><%= order.created_at.strftime('%Y/%m/%d')  %></td>
						<td><%= order.postal_code %><br/>
							<%= order.address %><br/>
							<%= order.address_name %></td>
						<td>
							<% order.products.each do |order_product| %>
								<%= order_product.name %><br>
							<% end %>
						</td>
						<td><%= order.billing_total %>円</td>
						<td><%= order.order_status %></td>
						<td><%= link_to "表示する" ,order_path(order.id) , class:"btn btn-primary"%></td>
					</tr>
			 	<% end %>
			</tbody>
		</table>
	</div>
</div>