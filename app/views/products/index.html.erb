<div class="row">
		<div class="col-3">
			<table class ="table">
				<tr>
					<th><span>ジャンル検索</span></th>
					<td>
						<% @genre.each do |genre| %>
						<%= link_to  product_path(@genre.id) do %>
						<%= product.genre %>
						<% end%>
					</td>
						<% end %>
				</tr>
			</table>
		</div>

		<div class="col-8">
		<span>
		<h2>商品一覧</h2>
		</span>
		<h3>全<%= @products_cnt %>件</h3>
			<div class ="row">
				<div class ="col-2">
					<% @products.each do |product| %>
						<%= attachment_image_tag product, :image, :fill, 100, 100, format: 'jpeg'%><br>
						<p><%= product.name %></p><br>
						<p>¥<%= product.non_taxed_price %></p>
					<% end %>
				</div>
			</div>
		</div>
</div>