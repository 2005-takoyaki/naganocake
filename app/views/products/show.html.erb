<div class="row">
		<div class="col-3">
			<table class ="table">
				<tr>
					<th><strong> ジャンル検索</strong></th>
					<td>
						<!--scss td {border: none;}-->
						<% @genres.each do |genre| %>
						<%= link_to  product_path(genre.id) do %>
						<%= @product.genre %>
						<% end%>
					</td>
						<% end %>
				</tr>
			</table>
		</div>

		<div class ="col-9">
			<div class="row">
				<div class="col-4">
					<%= attachment_image_tag @product, :image, :fill, 300, 600, format: 'jpeg'%>
				</div>
				<div class="col-5">
					<%= @product.name %><br>
					<%= @product.introduction%><br>
					<!--<p>¥</p><%= @product.non_taxed_price%><p>(税込商品)</p>-->

					<%= form_with model: @cart_product, url: cart_products_path(product_id: @product.id), method: :post, local: true do |f| %>
						<%= f.label :quantity, "個数選択"%>
						<%= f.select :quantity, [1,2,3,4,5,6,7,8,9] %>
						<%= f.hidden_field :product_id, :value => @product.id %>
						<%= f.submit('カートに入れる',class: "btn btn-primary") %>
						<!--<%= link_to ""%>-->
					<% end %>
				</div>
			</div>
		</div>
</div>

