<div class ="pl-5">
<h5><span>ジャンル一覧・追加</span></h5>
</div>

<%= form_for @genre, url: admin_genres_path do |f| %>

<% if @genre.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

   <form class="form-inline">
    <div class="form-group pl-3">
    <font style="font-size:small">
    <strong>
		<%= f.label :ジャンル %>
    </strong>
    </font>
		<%= f.text_field :genre_name %>


    <div class="form-check form-check-inline">
	  <label><%= f.radio_button :is_valid, "true" , checked: true %> 有効 </label>
    </div>

    <div class="form-check form-check-inline">
	  <label><%= f.radio_button :is_valid, "false" %> 無効</label>
    </div>

		<%= f.submit "追加", class: "btn btn-primary" %>
    </div>

   </form>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-6">

<table class="table">
  <thead>
    <tr class="table-info">
      <th>ジャンル</th>
      <th>状態</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr class="table-light">
        <td><%= genre.genre_name %></td>
        <td><%= active(genre.is_valid) %></td>
        <td><%= link_to '編集する', edit_admin_genre_path(genre) ,class: "btn btn-primary"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>