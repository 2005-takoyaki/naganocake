<h2><span span style="background-color:#C0C0C0">商品新規登録</span></h2>

<%= form_for @product, url: admin_products_path do |f| %>

<% if @product.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form>

<div class="form-group">
	<%= attachment_image_tag @product, :image, :fill, 100, 100, format: 'jpeg', fallback: "サンプル画像.jpg" %>
	<%= f.attachment_field :image %>
</div>

<div class="form-group">
	<%= f.label :商品名 %>
	<%= f.text_field :name, class: "name" %>
</div>

<div class="form-group">
	<%= f.label :商品説明 %>
	<%= f.text_area :introduction, class: "introduction" %>
</div>

<div class="form-group">
	<%= f.label :ジャンル %>
	<%= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: "-- 選択してください --" do %>
<% end %>

<div class="form-group">
	<%= f.label :税抜価格 %>
	<%= f.text_field :non_taxed_price, class: "non_taxed_price" %>
	円
</div>

<div class="form-group">
	<%= f.label :販売ステータス %>
	<%= f.select :has_sold, [["販売中", "true"], ["販売停止中", "false"]], include_blank: "-- 選択して下さい --" %>
</div>

<div class="actions">
	<%= f.submit "新規登録", class: "btn btn-primary" %>
</div>

</form>

<% end %>


