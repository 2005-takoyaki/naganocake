<h2><span span style="background-color:#C0C0C0">商品編集</span></h2>

<%= form_for @product, url: admin_product_path(@product) do |f| %>

<% if @product.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class="container">
<div class="row">
	<div class="col-sm-6">
	<%= attachment_image_tag @product, :image, :fill, 300, 200, format: 'jpeg', fallback: "サンプル画像.jpg" %>
	<div class="form-group">
	<%= f.attachment_field :image %>
</div>
</div>

<div class="col-sm-5">
<div class="form-group">
	<%= f.label :商品名 %>
	<%= f.text_field :name, :size=>"25x10" %>
</div>

<div class="form-group d-flex align-items-start">
	<%= f.label :商品説明 %>
	<%= f.text_area :introduction, :size=>"25x6" %>
</div>


<div class="form-group">
	<%= f.label :ジャンル %>
	<%= f.collection_select :genre_id, Genre.all, :id, :genre_name, {prompt: "-- 選択してください --"}, {class: "btn btn-primary"} %>
</div>


<div class="form-group">
	<%= f.label :税抜価格 %>
	<%= f.text_field :non_taxed_price, class: "non_taxed_price" %>
	円
</div>

<div class="form-group">
	<%= f.label :販売ステータス %>
	<%= f.select :has_sold, {'販売中': true, '販売停止中': false}, { prompt: "-- 選択してください --"}, { class: "btn btn-primary" } %>
</div>
</div>

<div class="col-sm-1 align-self-end">
<div class="actions">
	<%= f.submit "変更を保存", class: "btn btn-primary btn-lg" %>
</div>
</div>
</div>
</div>


<% end %>