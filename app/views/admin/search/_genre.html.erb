<div class="row">
  <div class="col-md-2 offset-md-1">
    <h5><span>ジャンル</span></h5>
  </div>
</div>
<div class="row">
  <div class="col-md-8 offset-md-2">
    <table class="table">
      <thead>
        <tr class="thead-light">
          <th>ジャンルID</th>
          <th>ジャンル名</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% genres.each do |genre| %>
          <tr>
            <td><%= genre.id %></td>
            <td><%= link_to genre.genre_name, admin_genres_path(genre.id) %></td>
            <td><%= status(genre.is_valid) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>