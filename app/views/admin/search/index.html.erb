<div class="row">
  <div class="col-sm">
    <!-- 顧客と商品がヒット -->
    <% if @products.present? && @customers.present? %>

      <!-- 商品 -->
      <div class="row">
        <div class="col-md-2 offset-md-1">
          <h5><span>製品</span></h5>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <table class="table">
            <thead>
              <tr class="thead-light">
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td><%= product.id %></td>
                  <td><%= link_to product.name, admin_product_path(product.id) %></td>
                  <td><%= converting_to_jpy(product.non_taxed_price) %></td>
                  <td><%= product.genre.genre_name %></td>
                  <td><%= sales(product.has_sold) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- 顧客 -->
      <div class="row">
        <div class="col-md-2 offset-md-1">
          <h5><span>会員</span></h5>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
                <td><%= customer.email %></td>
                <td><%= status(customer.is_valid) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    <!-- 商品のみヒット -->
    <% elsif @products.present? && @customers.blank? %>
      <!-- 製品 -->
      <div class="row">
        <div class="col-md-2 offset-md-1">
          <h5><span>製品</span></h5>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <table class="table">
            <thead>
              <tr class="thead-light">
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td><%= product.id %></td>
                  <td><%= link_to product.name, admin_product_path(product.id) %></td>
                  <td><%= converting_to_jpy(product.non_taxed_price) %></td>
                  <td><%= product.genre.genre_name %></td>
                  <td><%= sales(product.has_sold) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <!-- 顧客のみヒット -->
    <% elsif @products.blank? && @customers.present? %>
      <!-- 顧客 -->
      <div class="row">
        <div class="col-md-2 offset-md-1">
          <h5><span>会員</span></h5>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
                <td><%= customer.email %></td>
                <td><%= status(customer.is_valid) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    <!-- どちらもヒットせず -->
    <% else @products.blank? && @customers.blank? %>
      <h1>検索結果が見つかりませんでした</h1>
    <% end %>
  </div>
</div>