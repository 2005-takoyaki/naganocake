<div class="row">
  <div class="col-md-11 offset-md-1">
    <h5 style="background-color: gray; width: 225px;"><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h5>
    <br>
    <div class="form-row">
      <div class="form-group col-3">
        <p>顧客ID</p>
      </div>
      <div class="form-group col-3">
        <p><%= @customer.id %></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-3">
        <p>氏名</p>
      </div>
      <div class="form-group col-3">
        <p><%= @customer.last_name + @customer.first_name %>    <span class="btn btn-primary btn-sm"><%= status(@customer.is_valid) %>会員</span></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-3">
        <p>フリガナ</p>
      </div>
      <div class="form-group col-3">
        <p><%= @customer.kana_last_name + @customer.kana_first_name %></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-3">
        <p>郵便番号</p>
      </div>
      <div class="form-group col-3">
        <p><%= @customer.postal_code %></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-3">
        <p>住所</p>
      </div>
      <div class="form-group col-3">
        <p><%= @customer.address %></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-3">
        <p>電話番号</p>
      </div>
      <div class="form-group col-3">
        <p><%= @customer.phone_number %></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-3">
        <p>メールアドレス</p>
      </div>
      <div class="form-group col-3">
        <p><%= @customer.email %></p>
      </div>
    </div>
    <%= link_to '編集する', edit_admin_customer_path(@customer), class: "btn btn-primary" %>  <%= link_to '注文履歴一覧を見る', admin_order_path(@customer), class: "btn btn-primary" %>
  </div>
</div>
