<div class="row">
  <div class="col-sm-11 offset-sm-1">
    <h5 class="ml-3"><span><%= @customer.last_name + @customer.first_name %>さんの会員詳細</span></h5>
    <br>
    <div class="form-row">
      <div class="form-group col-sm-3">
        <p>顧客ID</p>
      </div>
      <div class="form-group col-sm-3">
        <p><%= @customer.id %><span class="customer-status offset-sm-1", style='background-color: <%= foo_color(@customer.is_valid) %>'><%= status(@customer.is_valid) %>会員</span></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-sm-3">
        <p>氏名</p>
      </div>
      <div class="form-group col-sm-3">
        <p><%= @customer.last_name + @customer.first_name %></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-sm-3">
        <p>フリガナ</p>
      </div>
      <div class="form-group col-sm-3">
        <p><%= @customer.kana_last_name + @customer.kana_first_name %></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-sm-3">
        <p>郵便番号</p>
      </div>
      <div class="form-group col-sm-3">
        <p><%= @customer.postal_code %></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-sm-3">
        <p>住所</p>
      </div>
      <div class="form-group col-sm-3">
        <p><%= @customer.address %></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-sm-3">
        <p>電話番号</p>
      </div>
      <div class="form-group col-sm-3">
        <p><%= @customer.phone_number %></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-sm-3">
        <p>メールアドレス</p>
      </div>
      <div class="form-group col-sm-3">
        <p><%= @customer.email %></p>
      </div>
    </div>
    <div class="mt-3">
      <%= link_to '編集する', edit_admin_customer_path(@customer), class: "btn btn-primary" %>  <%= link_to '注文履歴一覧を見る', admin_orders_path(@customer), class: "btn btn-primary" %>
    </div>
  </div>
</div>
