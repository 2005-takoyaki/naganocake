<div class="row">
  <div class="col-xs-10">
    <h5 style="background-color: gray; width: 55%;"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h5>

    <%= form_for @customer, url: admin_customer_path do |f| %>
      <div class="form-row">
        <div class="form-gruop col-6">
          <%= f.label :last_name, '名前' %>
        </div>
        <div class="form-group col-3">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="form-group col-3">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-gruop col-6">
          <%= f.label :kana_last_name, 'フリガナ' %>
        </div>
        <div class="form-group col-3">
          <%= f.text_field :kana_last_name, class: "form-control" %>
        </div>
        <div class="form-group col-3">
          <%= f.text_field :kana_first_name, class: "form-control"%>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-6">
          <%= f.label :email, 'メールアドレス' %>
        </div>
        <div class="form-group col-6">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-6">
          <%= f.label :postal_code, '郵便番号' %>
        </div>
        <div class="form-group col-6">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-6">
          <%= f.label :address, '住所' %>
        </div>
        <div class="form-group col-6">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-6">
          <%= f.label :phone_number, '電話番号' %>
        </div>
        <div class="form-group col-6">
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-6">
          <%= f.label :is_valid, '会員ステータス' %>
        </div>
        <div class="form-group col-6">
          <%= f.radio_button :is_valid, true %>  有効    <%= f.radio_button :is_valid, false %>  退会済み
        </div>
      </div>


        <%= f.submit '変更を保存する', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>