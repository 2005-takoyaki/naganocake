<div class="row">
  <div class="col">
    <h2>注文履歴詳細</h2>
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_products.each do |order_product| %>
        <tr>
          <td><%= order_product.product.name %></td>
          <td><%= order_product.product.non_taxed_price.apply_tax %></td>
          <td><%= order_product.number %></td>
          <td><%= order_product.product.non_taxed_price.to_i * order_product.number.to_i %></td>
          <%= form_for order_product, url: "/admin/order_products/#{order_product.id}" do |f| %>
            <td>
              <%= f.select :production_status, Product.production_statuses.keys, class: "production_status" %>
              <%= f.submit value: "更新", class: "btn btn-primary" %>
            </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>