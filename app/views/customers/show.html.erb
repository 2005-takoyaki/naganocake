<div class="row">
  <div class="col-auto">
    <h5>マイページ</h5>

    <div class="top_menu">
      <span class="font-weight-bold">登録情報</span> <%= link_to '編集する', edit_customers_path, class: "btn btn-primary btn-sm" %>
        <%= link_to 'パスワードを変更する', '#', class: "btn btn-primary btn-sm" %>
    </div>

    <table class="table table-bordered registration_information">
      <tbody>
        <tr><th>氏名</th><td><%= @customer.last_name + '  ' + @customer.first_name %></td></tr>
        <tr><th>カナ</th><td><%= @customer.kana_last_name + '   ' + @customer.kana_first_name %></td></tr>
        <tr><th>郵便番号</th><td><%= @customer.postal_code %></td></tr>
        <tr><th>住所</th><td><%= @customer.address %></td></tr>
        <tr><th>電話番号</th><td><%= @customer.phone_number %></td></tr>
        <tr><th>メールアドレス</th><td><%= @customer.email %></td></tr>
      </tbody>
    </table>

    <div class="bottom_menu">
      <div class="row">
        <p class="col-4 font-weight-bold">配送先</p>
        <p class="col-8"><%= link_to '一覧を見る', ships_path, class: "btn btn-primary btn-sm" %></p>
      </div>
      <div class="row">
        <p class="col-4 font-weight-bold">注文履歴</p>
        <p class="col-8"><%= link_to '一覧を見る', orders_path, class: "btn btn-primary btn-sm" %></p>
      </div>
    </div>

  </div>
</div>