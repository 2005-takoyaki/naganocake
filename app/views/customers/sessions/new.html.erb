<div class="row", id="login_form">
  <div class="col-sm-12">
    <!-- ログインフォーム -->
    <div class="form-group">
      <h5>会員の方はこちらからログイン</h5>
      <%= form_for(resource, as: resource_name, url: customers_sign_in_path) do |f| %>
      <div class="row ml-5">
        <%= f.label :email, "メールアドレス", class: "col-sm-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-5" %>
      </div>

      <div class="mt-3 row ml-5">
        <%= f.label :password, "パスワード", class: "col-sm-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-5" %>
        <p class="col-sm-7 text-right"><%= link_to "⇒パスワードを忘れた方はこちら", "#" %></p>
      </div>

      <div class="actions text-center">
        <%= f.submit('ログイン',class: 'btn btn-primary')%>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-sm-12">
    <h5>登録がお済みでない方</h5>
    <p class="ml-5"><%= render "customers/shared/links" %> から新規登録を行って下さい。</p>
  </div>
</div>
